<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="false">
	
	<statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />
	
	<newRule pattern="/configuration/amqpLoggingInjector" actionClass="eu.arkitech.logback.amqp.consumer.AmqpLoggingInjector$CreateAction" />
	
	<newRule pattern="/configuration/randomGenerator" actionClass="eu.arkitech.logback.common.RandomGenerator$CreateAction" />
	
	<amqpLoggingInjector>
		<host>${arkitech.logging.amqp.host:-127.0.0.1}</host>
		<port>${arkitech.logging.amqp.port:-5672}</port>
		<virtualHost>${arkitech.logging.amqp.virtualhost:-/}</virtualHost>
		<username>${arkitech.logging.amqp.username:-guest}</username>
		<password>${arkitech.logging.amqp.password:-guest}</password>
		<exchange>${arkitech.logging.amqp.exchange:-logging}</exchange>
		<queue>${arkitech.logging.amqp.queue:-}</queue>
		<routingKey>${arkitech.logging.amqp.routingkey:-#}</routingKey>
	</amqpLoggingInjector>
	
	<!--
	<randomGenerator>
		<count>1000</count>
		<interval>250</interval>
	</randomGenerator>
	-->
	
	<appender name="sifter" class="ch.qos.logback.classic.sift.SiftingAppender">
		<discriminator>
			<key>application</key>
			<defaultValue>unknown</defaultValue>
		</discriminator>
		<sift>
			<appender name="sifter-${application}" class="ch.qos.logback.core.FileAppender">
				<file>${arkitech.logging.sifter.file.prefix:-/tmp/arkitech-logging-logs-}${application}.log</file>
				<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
					<pattern>[%mdc{application}/%mdc{component}/%mdc{node}] [%mdc{sequence}/%relative/%d{YYYY-MM-DDTHH:mm:ss.SSS}] [%level] [%logger] %msg%n</pattern>
				</encoder>
			</appender>
		</sift>
	</appender>
	
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>[%mdc{application}/%mdc{component}/%mdc{node}] [%mdc{sequence}/%relative/%d{HH:mm:ss.SSS}] [%level] [%logger] %msg%n</pattern>
		</encoder>
	</appender>
	
	<root level="trace">
		<appender-ref ref="console" />
		<appender-ref ref="sifter" />
	</root>
	
</configuration>
